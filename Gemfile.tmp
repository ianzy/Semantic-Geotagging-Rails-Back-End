source 'http://rubygems.org'

gem 'rails', '2.3.8'
gem 'bundler'
gem 'rspec'
gem 'rspec-rails'

group :development do
  gem 'rake'
  gem 'sqlite3-ruby'
  gem 'mongrel'
  gem 'ruby-debug-base' #'0.10.3'
  gem 'ruby-debug-ide' #'0.4.9'
# Windows users may need to add the next line, whatever you did to make fast debugger work, put it in here
# gem linecache, '0.43'
